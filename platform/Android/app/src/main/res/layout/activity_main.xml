<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.noclip.marcinmalysz.sagacross.GamePad android:layout_width="0dp" android:layout_height="0dp"
                    android:id="@+id/movePad"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/aimPad"
          app:layout_constraintWidth_default="percent"
          app:layout_constraintWidth_percent="0.5">
    </com.noclip.marcinmalysz.sagacross.GamePad>

    <com.noclip.marcinmalysz.sagacross.GamePad android:layout_width="0dp" android:layout_height="0dp"
          android:id="@+id/aimPad"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintWidth_default="percent"
          app:layout_constraintWidth_percent="0.5"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/movePad">
    </com.noclip.marcinmalysz.sagacross.GamePad>

</android.support.constraint.ConstraintLayout>